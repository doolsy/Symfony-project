{% extends "EappBlogBundle::layout.html.twig" %}
{% block title %}
  Accueil - {{ parent() }}
{% endblock %}

{% block myblogz_body %}

{% for article in listArticles %}
  <div class="row">   
            <br>
            <div class="col-md-2 col-sm-3 text-center">

              <a class="story-img" href="#"><img {% if (article.image != null) %} src="{{article.image.getWebPath}}" {% else %} src="//placehold.it/100" {% endif %} style="width:100px;height:100px" class="img-circle"></a>
            </div>
            <div class="col-md-10 col-sm-9">

              <h2><a href="{{ path('myblogz_post', {'id': article.id}) }}">{{ article.titre }}</a></h2>
              <div class="row">
                <div class="col-xs-9">
                  <p>{{ article.content }}</p>
                  <p class="lead"><a href="{{ path('myblogz_post', {'id': article.id}) }}"><button class="btn btn-default">Read More</button></a></p>

                  <ul class="list-inline"><li><a href="#">{{ "Date de publication: " ~ article.published|date('d-m-Y G:i:s')}}</a></li>></ul>
                  </div>
                <div class="col-xs-3"></div>
              </div>
              <br><br>
            </div>
          </div>
          <hr>
{% endfor %}

{% endblock %}